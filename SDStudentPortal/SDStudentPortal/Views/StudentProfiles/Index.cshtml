@model IEnumerable<SDStudentPortal.Models.UserModel>
<link href="~/Content/StyleSheet1.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}

<h1>Students</h1>

@foreach (var item in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="card">
                    <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
                    <div class="avatar">
                        <img src="" alt="" />
                    </div>
                    <div class="content">
                        <p>
                            @item.FirstName @item.LastName <br>
                            @item.ProfileName
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a a href='@Url.Action("StudentProfile", "UserModels")'>
        <img src="../../@Html.DisplayFor(modelItem => item.ProfilePictureURL)"/>
    </a>
}

